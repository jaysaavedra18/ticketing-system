@model CommunicationIsKey.Models.ContractModel

@{
    ViewBag.Title = "SearchForm";
}

<h2>Search For Contracts</h2>
<!-- Search by Company -->
@using (Html.BeginForm("SearchForCompany", "Contracts"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label for="searchPhrase">Search by Company</label>
                <input type="text" name="searchPhrase" id="searchPhrase" class="form-control" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

