@model CommunicationIsKey.Models.CompanyModel

@{
    ViewBag.Title = "SearchForm";
}

<h2>Search For Companies</h2>
<!-- Search by Name -->
@using (Html.BeginForm("SearchForName", "Companies"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label for="searchPhrase">Search by Company Name</label>
                <input type="text" name="searchPhrase" id="searchPhrase" class="form-control" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

